<section class="top-login container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <h1>「いま」を見つけよう</h1>
    <%= form_tag(controller: "top") do %>
      <p>メールアドレス</p>
      <p><%= email_field_tag :mail %></p>
      <p>パスワード</p>
      <p><%= password_field_tag :password %></p>
      <p><%= submit_tag "ログイン", class: 'btn btn-default' %></p>
    <% end %>
  </div>

</section>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>



